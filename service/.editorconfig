# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,kt,kts,scala,rs,xml,kt.spec,kts.spec}]
max_line_length = 100
disabled_rules = no-wildcard-imports, import-ordering

[*.{yml,yaml}]
indent_size = 2

[{Makefile,*.go}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
